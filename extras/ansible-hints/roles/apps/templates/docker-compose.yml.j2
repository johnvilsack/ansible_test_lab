version: '3.7'

services:
  n8n:
    image: n8nio/n8n
    container_name: n8n
    restart: always
    ports:
      - "127.0.0.1:5678:5678"
    environment:
      - N8N_HOST=n8n.your_domain.com
      - N8N_PROTOCOL=https
      - NODE_ENV=production
      - WEBHOOK_URL=https://n8n.your_domain.com/
    volumes:
      - n8n_data:/home/node/.n8n

  powershell-universal:
    image: ironmansoftware/universal:latest
    container_name: powershell-universal
    restart: always
    ports:
      - "127.0.0.1:5000:5000"
    volumes:
      - psu_data:/root/.local/share/universal

